<!DOCTYPE html>
<html>
<%- include('../common/head.ejs') %>
<%- include('../common/footer.ejs')%>
<body>
    <%- include('../common/navbar.ejs') %>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 order-md-1 text-center text-md-left pr-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <h1>Leads</h1>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Email</th>
                                    <th scope="col">Action</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < leads.length; i++) {%>
                                <tr id=<%= leads[i].id %>>
                                    <td>
                                        <span>
                                            <%= leads[i].email %>
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/lead/<%= leads[i].id%>">Detail</a>
                                    </td>
                                    <td>
                                        <button class="btn btn-primary" onClick="deleteLead(`<%= leads[i].id %>`)">
                                            Delete </button>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>